            "source": [
                "function howManyGames(p, d, m, s) {\n    let gamesBought = 0;\n    let currentPrice = p;\n    \n    while (s >= currentPrice && currentPrice >= m) {\n        gamesBought += 1;\n        s -= currentPrice;\n        currentPrice -= d;\n        if (currentPrice < m) {\n            currentPrice = m;\n        }\n    }\n    \n    return gamesBought;\n}"
