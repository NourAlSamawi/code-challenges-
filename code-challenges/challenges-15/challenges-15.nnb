            "source": [
                "function squares(a, b) {\n    let count = 0;\n    let currentSquare = 1;\n    \n    while (currentSquare * currentSquare <= b) {\n        if (currentSquare * currentSquare >= a) {\n            count++;\n        }\n        currentSquare++;\n    }\n    \n    return count;\n}\n\nfunction countSquareIntegers(testCases) {\n    const results = [];\n    \n    for (let i = 0; i < testCases.length; i++) {\n        const [a, b] = testCases[i];\n        results.push(squares(a, b));\n    }\n    \n    return results;\n}"
